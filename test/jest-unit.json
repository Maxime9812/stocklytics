{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "../",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "coverageDirectory": "./coverage",
  "testEnvironment": "node",
  "roots": [
    "<rootDir>/src/",
    "<rootDir>/libs/"
  ],
  "moduleNameMapper": {
    "^@app/inventory(|/.*)$": "<rootDir>/libs/inventory/src/$1",
    "^@app/authentication(|/.*)$": "<rootDir>/libs/authentication/src/$1",
    "^@app/shared(|/.*)$": "<rootDir>/libs/shared/src/$1"
  }
}